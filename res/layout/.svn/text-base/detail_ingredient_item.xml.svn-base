<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txt_detail_ingredient_name"
        android:layout_width="50dp"
        android:layout_height="wrap_content" 
        android:layout_weight="2"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView 
        android:id="@+id/txt_detail_ingredient_amount"
        android:layout_width="30dp"
        android:layout_height="wrap_content" 
        android:layout_weight="2"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <ImageView
        android:id="@+id/iv_detail_ingredient_image"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/iv_detail_ingredient_image"/>
    
    <ImageView
        android:id="@+id/iv_detail_ingredient_image2"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/iv_detail_ingredient_image"/>

</LinearLayout>