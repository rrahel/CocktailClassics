<resources>

    <bool name="is_smartphone">true</bool>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="cocktailRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">40dip</item>
        <item name="android:progressDrawable">@drawable/modified_rating_overview</item>
    </style>
    
    <style name="cocktailRatingBarSmartphone" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">25dip</item>
        <item name="android:maxHeight">25dip</item>
        <item name="android:progressDrawable">@drawable/modified_rating_overview_small</item>
    </style>

</resources>