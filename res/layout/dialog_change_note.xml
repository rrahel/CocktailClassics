<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/bg_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/bg_color_title"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_bar_icon"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/iv_detail_ingredient_image"
            android:src="@drawable/ic_note32" />

        <TextView
            android:id="@+id/dialog_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/dialog_title_text_color"
            android:background="@color/bg_color_title"
            android:gravity="center"
            android:text="@string/change_note"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_Image_Note"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/cocktailPic"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/detail_pic" />

        <EditText
            android:id="@+id/etxt_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/dialog_title_text_color"
            android:ems="10"
            android:hint="@string/hint_note"
            android:inputType="textMultiLine"
            android:maxLength="255"
            android:lines="7"
            android:minLines="4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_Buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dialog_title_text_color"
            android:layout_weight="1"
            android:text="@string/add" />

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dialog_title_text_color"
            android:layout_weight="1"
            android:text="@string/cancel" />
    </LinearLayout>

</LinearLayout>